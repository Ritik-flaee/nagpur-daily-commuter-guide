{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/chat",
            "dest": "/api/index.py",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/api/health",
            "dest": "/api/index.py",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ]
}